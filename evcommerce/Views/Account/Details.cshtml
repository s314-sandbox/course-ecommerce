@model evcommerce.Models.AccountDetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Личный кабинет</h1>

<div>
    <h4>Информация профиля</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Имя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Фамилия
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class="col-sm-2">
            Телефон
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            E-mail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mail)
        </dd>
        <dt class="col-sm-2">
            Логин
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Login)
        </dd>
    </dl>
</div>

<div>
    @Html.ActionLink("Изменить данные профиля", "Edit")
</div>

<br />

<h4>Адреса доставки</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                Страна
            </th>
            <th>
                Город
            </th>
            <th>
                Улица
            </th>
            <th>
                Дом
            </th>
            <th>
                Квартира
            </th>
            <th>
                Примечание
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AdressListModel)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Street)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.House)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Flat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Info)
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Добавить адрес доставки", "Create", "Adress")
</div>

<br />

<h4>Совершенные заказы</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                ID Заказа
            </th>
            <th>
                Дата
            </th>
            <th>
                Способ оплаты
            </th>
            <th>
                Способ доставки
            </th>
            <th>
                Адрес доставки
            </th>
            <th>
                Детали
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderInfoEntryModel)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Payment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Delivery)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.ActionLink("Содержание", "Details", "Order", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

